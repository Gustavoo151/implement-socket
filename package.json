{
  "name": "socket-chat",
  "version": "1.0.0",
  "description": "Simple chat application using TCP sockets",
  "main": "dist/server.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start:server": "npx ts-node --transpile-only src/server.ts",
    "start:client": "npx ts-node --transpile-only src/client.ts",
    "dev:server": "nodemon --exec ts-node --transpile-only src/server.ts",
    "dev:client": "nodemon --exec ts-node --transpile-only src/client.ts",
    "start": "npm run build && node dist/server.js"
  },
  "keywords": [
    "socket",
    "chat",
    "tcp",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.28",
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
